@using Microsoft.AspNet.Identity
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Sweet & Savory Bakery</title>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/site.css" rel="stylesheet" />
</head>
<body style="background-color:#fff4f7;">
    <nav class="navbar navbar-expand-lg" style="background-color:#ffb6c1; padding: 10px 0;">
        <div class="container">
            <a class="navbar-brand fw-bold text-white" href="/">
                🍰 Sweet & Savory
            </a>

            <ul class="nav navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Trang chủ", "Index", "Home", null, new { @class = "nav-link text-white fw-semibold" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Sản phẩm", "Index", "Product", null, new { @class = "nav-link text-white fw-semibold" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Giỏ hàng", "Index", "Cart", null, new { @class = "nav-link text-white fw-semibold" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Liên hệ", "Contact", "Home", null, new { @class = "nav-link text-white fw-semibold" })
                </li>

                @* 🔹 Hiện mục "Quản lý sản phẩm" nếu là admin *@
                @if (User.IsInRole("Admin"))
                {
                    <li class="nav-item">
                        @Html.ActionLink("Quản lý sản phẩm", "Index", "Admin", null, new { @class = "nav-link text-white fw-semibold" })
                    </li>
                }
            </ul>

            <ul class="nav navbar-nav ms-auto">
                @if (Request.IsAuthenticated)
                {
                    <li class="nav-item">
                        <span class="nav-link text-white">
                            Xin chào, <strong>@User.Identity.GetUserName()</strong> 💗
                        </span>
                    </li>

                    <li class="nav-item">
                        <form action="@Url.Action("LogOff", "Account")" method="post" id="logoutForm" class="d-inline">
                            @Html.AntiForgeryToken()
                            <a href="javascript:document.getElementById('logoutForm').submit()" class="nav-link text-white">
                                Đăng xuất
                            </a>
                        </form>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        @Html.ActionLink("Đăng nhập", "Login", "Account", null, new { @class = "nav-link text-white" })
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Đăng ký", "Register", "Account", null, new { @class = "nav-link text-white" })
                    </li>
                }
            </ul>
        </div>
    </nav>

    <div class="container body-content mt-4">
        @RenderBody()
        <hr />
        <footer class="text-center text-muted mb-3">
            © 2025 Sweet & Savory Bakery | Made with 💗 by nhóm 14
        </footer>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>
